{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["config/*", "src/**.ts", "src/**.tsx"]
}
